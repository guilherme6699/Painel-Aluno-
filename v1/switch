const paths = [
  'C:\\Program Files\\MySQL\\MySQL Server 8.0\\bin\\mysql.exe',
  'C:\\Program Files (x86)\\MySQL\\MySQL Server 5.7\\bin\\mysql.exe',
  'C:\\xampp\\mysql\\bin\\mysql.exe', // caso use XAMPP
];

// procura o primeiro que existir
let mysqlPath = paths.find(p => fs.existsSync(p));

if (!mysqlPath) {
  console.error("âŒ MySQL nÃ£o encontrado. Verifique se ele estÃ¡ instalado ou adicione o caminho manualmente.");
  process.exit(1);
}



exec(` "${mysqlPath}" -u root -p` , (error, stdout, stderr) => {
          if (error){
              console.error(`erro ao abrir o mysql: ${error.message}`);
            return;
          }
          if (stderr) {
              console.error(`aviso: ${stderr}`);
            return;
          }
            console.log('MySQL aberto com sucesso!');
          });




          







          const caminhos = [
  "C:\\Program Files\\Oracle\\VirtualBox\\VirtualBox.exe",      // InstalaÃ§Ã£o padrÃ£o
  "C:\\Program Files (x86)\\Oracle\\VirtualBox\\VirtualBox.exe",
  "D:\\Program Files\\Oracle\\VirtualBox\\VirtualBox.exe",      // Caso esteja em outro disco
];

// Verifica se o executÃ¡vel existe em algum dos caminhos
let vboxPath = caminhos.find(p => fs.existsSync(p));

if (!vboxPath) {
  console.error("âŒ VirtualBox nÃ£o encontrado. Verifique se ele estÃ¡ instalado.");
  process.exit(1);
}

// Executa o VirtualBox
exec(`"${vboxPath}"`, (error, stdout, stderr) => {
  if (error) {
    console.error(`Erro ao abrir o VirtualBox: ${error.message}`);
    return;
  }
  if (stderr) {
    console.error(`Aviso: ${stderr}`);
    return;
  }
  console.log("âœ… VirtualBox aberto com sucesso!");
});